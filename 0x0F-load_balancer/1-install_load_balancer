#!/usr/bin/env bash
# This script installs and configures HAProxy to distribute traffic between web-01 and web-02

# Update and install HAProxy
apt-get update -y
apt-get install haproxy -y

# Create the HAProxy configuration file
cat <<EOF > /etc/haproxy/haproxy.cfg
global
    log /dev/log local0
    log /dev/log local1 notice
    chroot /var/lib/haproxy
    stats socket /run/haproxy/admin.sock mode 660
    stats timeout 30s
    user haproxy
    group haproxy
    daemon

defaults
    log     global
    option  httplog
    option  dontlognull
    timeout connect 5000ms
    timeout client  50000ms
    timeout server  50000ms

frontend http_front
    bind *:80
    default_backend http_back

backend http_back
    balance roundrobin
    server web01 [WEB-01-IP]:80 check
    server web02 [WEB-02-IP]:80 check
EOF

# Restart HAProxy to apply the new configuration
service haproxy restart

# Ensure HAProxy starts on boot
update-rc.d haproxy defaults

