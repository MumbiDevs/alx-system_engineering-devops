#!/usr/bin/env bash
# Update package lists and install Nginx

sudo apt-get -y update
sudo apt-get -y install nginx

# Allow HTTP traffic through the firewall
sudo ufw allow 'Nginx HTTP'

# Create a simple index file
echo "Hello World" | sudo tee /var/www/html/index.html

# Backup the original Nginx default site configuration
sudo cp /etc/nginx/sites-available/default /etc/nginx/sites-available/default.bak

# Insert the rewrite rule using awk
sudo awk '/listen 80 default_server;/ {print; print "    rewrite ^/redirect_me https://www.youtube.com/ permanent;"; next}1' /etc/nginx/sites-available/default.bak | sudo tee /etc/nginx/sites-available/default

# Restart Nginx to apply changes
sudo systemctl restart nginx

# Confirm the setup
curl -sI http://localhost/redirect_me | grep "HTTP/1.1 301 Moved Permanently"
