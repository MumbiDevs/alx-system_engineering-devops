#!/usr/bin/env bash
# Configures an Ubuntu server as follows: - localhost resolves to 127.0.0.2 - facebook.com resolves to 8.8.8.8

sudo cp /tmp/correction/1931595902922367875607191208179616888003_5/285/404684/0x08-networking_basics_2/hosts /tmp/correction/1931595902922367875607191208179616888003_5/285/404684/0x08-networking_basics_2/hosts.backup
sudo sed -i 's/^127.0.0.1.*localhost/127.0.0.2 localhost/' /tmp/correction/1931595902922367875607191208179616888003_5/285/404684/0x08-networking_basics_2/hosts
echo "8.8.8.8 facebook.com" | sudo tee -a /tmp/correction/1931595902922367875607191208179616888003_5/285/404684/0x08-networking_basics_2/hosts >/dev/null
